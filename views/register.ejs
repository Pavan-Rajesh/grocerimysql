<body class="d-flex justify-content-center align-items-center">

    <form action="/register" method="POST">
        <div class="container-sm d-flex flex-column justify-content-center align-items-center p-lg-5 opacity-100">
            <div class="mb-3">
                <label for="Name" class="form-label text-white">Name:</label>
                <input type="text" name="userName" class="form-control" id="exampleFormControlInput1">
            </div>
            <div class="mb-3">
                <label for="phnum" class="form-label text-white">Phonenumber</label>
                <input type="number" class="form-control" name="userphoneNumber" placeholder="888-888-8888">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label text-white">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" name="userEmail"
                    placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label text-white">Password</label>
                <input type="password" class="form-control" name="userPassword">
            </div>

            <div class=" d-flex justify-content-evenly">
                <button type="submit" class="btn btn-primary btn-sm" id="regi">Register</button>
            </div>
        </div>
    </form>
